---
import { Image } from "astro:assets";
import { Button } from "../ui/button";
import banner from "../../assets/content/banner.jpg";
---

<section
  class="w-full mb-6 py-26 hover:opacity-95 transition-all delay-200"
  style="position: relative; overflow: hidden; box-shadow: -1px 2px 7px 1px #2727275e;"
>
  <Image
    src={banner}
    alt={"Banner image"}
    width={1400}
    height={500}
    style={{
      position: "absolute",
      zIndex: -10,
      left: 0,
      top: 0,
      objectFit: "cover",
      height: "100%",
      objectPosition: "top right",
    }}
  />
  <div class="flex flex-col ml-10" style={{ width: "50%" }}>
    <h1 class="text-3xl font-bold text-blue-200">Trending Accessories</h1>
    <h2 class="text-6xl font-bold text-slate-100">Modern Products</h2>
    <div class="flex items-end mt-8 mb-1">
      <p class="text-blue-100">Starting at</p>
      <span class="text-2xl font-bold ml-2 text-red-200">$15.00</span>
    </div>
    <Button className="my-1 w-fit mt-5 hover:animate-pulse" size={"lg"}>SHOP NOW</Button>
  </div>
</section>

<style>
  section {
    border-radius: 15px;

    div:first-child {
      padding: 35px;
    }
  }
</style>
