---
import { MOCK_BestSellers, MOCK_products } from "../../mocks/products";
import CategoryColumn from "../molecules/CategoryColumn.astro";
import ProductColumn from "../molecules/ProductColumn.astro";
import ProductsShowcase from "../organisms/ProductsShowcase.astro";
import ProductsView from "../organisms/ProductsView.astro";

const products = MOCK_products;
const bestSellers = MOCK_BestSellers;
---

<section class="grid gap-10 max-md:flex max-md:flex-col">
  <div class="flex flex-col gap-10">
    <CategoryColumn />
    <ProductColumn title="Best sellers" products={bestSellers} />
  </div>
  <div class="flex flex-col gap-10 min-w-0">
    <ProductsShowcase />
    <ProductsView products={products} />
  </div>
</section>

<style>
  section {
    grid-template-columns: 1fr 9fr;
  }
</style>
