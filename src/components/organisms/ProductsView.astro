---
import type { ProductType } from "../../models/product.model";
import { Product } from "../molecules/Product.tsx";

interface Props {
  products: ProductType[];
}

const { products } = Astro.props;
---

<section id="products" class="mt-8">
  <p class="font-bold ml-2 uppercase">
    products ({products.length})
  </p>
  <div
    class="min-[330px]:grid max-[330px]:flex max-[330px]:flex-col gap-3 min-[330px]:w-full min-[330px]:items-start mt-5 xl:grid-cols-3 lg:grid-cols-2"
  >
    {
      products.map((product) => (
        <Product client:load {...product} extraKey="view" />
      ))
    }
  </div>
</section>
